
<p id="brand">NABI LA ROBE</p>

<% @products.each do |product| %>
<div id="store">
<div class="grid-container">
    <div class="grid-item">
    <h5><%= product.title %></h5>
      <span><%= image_tag(product.image_url) %></span><br>
        <span><%= product.description %></span>
      <span style="float:right"> <%= number_to_currency(product.price) %></span><br>
      <span> <%= product.size %></span> 
      <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
    </div>
    </div>
    </div>
<% end %> 


